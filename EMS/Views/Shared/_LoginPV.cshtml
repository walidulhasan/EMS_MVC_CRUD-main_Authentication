@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)

{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "d-flex justify-content-end" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav mr-auto d-flex justify-content-end">
            <li class="nav-item">@Html.ActionLink("Hello " + User.Identity.GetUserName() + " !", "Index", "Home", new { }, new { @class = "nav-link disabled text-black-50" })</li>
            <li class="nav-item"> @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })</li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
        </li>
        <li class="nav-item"> @Html.ActionLink("LogIn", "Login", "Account", new { }, new { @class = "nav-link" })</li>
    </ul>
}
