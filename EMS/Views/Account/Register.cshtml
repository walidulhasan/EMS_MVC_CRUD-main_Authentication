@model EMS.Models.ViewModels.RegVM

@{
    ViewBag.Title = "Register";
}

@section styles{
    <style type="text/css">
        fieldset {
            font-family: sans-serif;
            font-family: sans-serif;
            border: 3px solid black;
            background: #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-top: 30px;
            margin-left: 250px;
            margin-right: 350px;
        }

            fieldset legend {
                background: black;
                color: #fff;
                padding: 5px 10px 10px 20px;
                font-size: 15px;
                box-shadow: 0 0 0 5px #ddd;
                margin-left: 1px;
                margin-right: 10px;
            }
    </style>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset class="form-horizontal">
        <legend>Regestion Form</legend>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.UserNmae, htmlAttributes: new { @class = "control-label col-md-2 fa fa-pencil" })*@
            <p class="ml-3"> <i class="fa fa-user fa-lg"></i> User Name</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserNmae, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Name" } })
                @Html.ValidationMessageFor(model => model.UserNmae, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="ml-3"> <i class="fa fa fa-envelope fa-lg"></i> Email</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "ad", placeholder = "Enter your email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="ml-3"><i class="fa fa-unlock-alt fa-lg"></i> Password</p>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter your Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="ml-3"><i class="fa fa-unlock-alt fa-lg"></i> Confirm Password</p>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Confirm Password" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Account" class="btn btn-primary active fa fa-sign-in fa-lg py-2" />
                @Html.ActionLink(" Login", "Login","Account",new {@class= "btn btn-info fa fa-sign-in fa-lg py-2",style="margin-left:100px"})
                
            </div>

        </div>
    </fieldset>
}
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ad").attr("autocomplete", "off");
        })
    </script>
}
