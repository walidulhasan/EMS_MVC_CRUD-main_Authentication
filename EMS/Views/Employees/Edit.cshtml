@model EMS.Models.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "Edit";
}
@section styles{

    @*<link href="~/datedropper/Datedropper3/datedropper.css" rel="stylesheet" />*@
}
<h2 class="text-center my-1" style="color:#020240">Employee Add</h2>
<div class="row ml-5">
    <div class="col ml-5 mt-3">
        @using (Html.BeginForm("Edit", "Employees", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-8">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model=>model.eId)
                    @Html.HiddenFor(model => model.eImage)
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
                            @*<select>
                                    <option value="">--Select--</option>
                                    <option value="Mr">Mr</option>
                                    <option value="Mrs">Mrs</option>
                                    <option value="Ms">Ms</option>
                                    <option value="Miss">Miss</option>
                                </select>*@
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.eName, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.eName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                            @Html.ValidationMessageFor(model => model.eName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control insertJoin", placeholder = "Date of Birth",Type="date" } })
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.eGender, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.eGender, new { htmlAttributes = new { @class = "form-control", placeholder = "Gemder" } })
                            @Html.ValidationMessageFor(model => model.eGender, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.PhoneNo, htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone No" } })
                            @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.positionId, "positionId", htmlAttributes: new { @class = "col-form-label col-md-2" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.positionId, ViewBag.Postion as SelectList, "----Select one----", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="offset-2 col-md-8">
                            <input type="submit" class="btn btn-primary mr-2" value="Save data" />
                            <input  type="reset" class="btn btn-warning" value="Reset" />
                       
                            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "text-center mt-4 btn btn-info d-flex justify-content-center" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mt-5">
                    <div class="form-group row">
                        <div class="col-md-5">
                            <img src="~/EmployeeImages/default.png" width="150" height="150" id="imagePreview" class="mb-3" />
                            @Html.TextBoxFor(model => model.Picture, new { type = "file", @id = "Imageone" })
                            @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
