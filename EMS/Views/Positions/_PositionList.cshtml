@model IEnumerable<EMS.Models.tblPosition>
<table class="table table-striped table-hover table-bordered table-sm ml-5 mt-3 col-md-8">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td class="d-flex justify-content-center">
                @Html.ActionLink(" Edit", "Edit", new { id = item.positionId }, new { @class = "btn btn-primary btn-sm fa fa-pencil" }) |
                @Html.ActionLink(" Delete", "Delete", new { id = item.positionId }, new { @class = "btn btn-danger btn-sm fa fa-trash" })
            </td>
        </tr>
    }

</table>
