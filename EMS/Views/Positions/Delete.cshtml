@model EMS.Models.tblPosition

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="color:#020240">Position</h2>

<h3 class="alert alert-info text-danger text-center ml-5">Are you sure you want to delete this?</h3>
<div class="ml-5">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd class="form-control mt-3">
            @Html.DisplayFor(model => model.Position)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        </div>
    }
    <div class="form-actions no-color mt-3">
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info btn-sm " })
    </div>
</div>

